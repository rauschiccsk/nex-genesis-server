     IcTools, IcTypes, NexPath, EncodeIni, Forms, ExtCtrls, Classes, SysUtils;

type
  TEdiDoc=class(TComponent)
    constructor Create(pEdiFrm:word);
    destructor Destroy; override;
  private
    oEdiFrm:word;
    oEdi012:TEdi012; // Continental
